<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    tools:context=".Update_StockList_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5eeed"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setcategoryid"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settypeid"
            android:visibility="invisible"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setsizeid"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setmakeid"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setuomid"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/header"
            android:background="@color/white"
            >

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="45sp"
                android:layout_height="wrap_content">
                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topAppbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/white"
                    app:navigationIcon="@drawable/ic_baseline_menu_24"
                    />

            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5sp"
                >
                <ImageView
                    android:layout_width="120sp"
                    android:layout_height="40sp"
                    android:src="@drawable/logo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5sp"
                android:gravity="right"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location :"
                    android:textSize="10sp"
                    android:layout_margin="10sp"
                    android:textStyle="bold"
                    android:textColor="#8e84e8"
                    android:fontFamily="serif"/>
                <TextView
                    android:id="@+id/location_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="5sp"
                    android:textStyle="bold"
                    android:textColor="#8e84e8"
                    />


                <ImageView
                    android:id="@+id/img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="7sp"
                    android:src="@drawable/ic_baseline_message_24"
                    />
                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="25sp"
                    android:layout_height="35sp"
                    android:layout_margin="5sp"
                    android:src="@drawable/ic_baseline_more_vert_24"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:orientation="horizontal"
            android:layout_margin="15sp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock Update"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:layout_marginStart="15sp"
                android:layout_marginTop="5dp"

                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  | Home - stock Update"
                android:textColor="@color/lightgray"
                android:fontFamily="sans-serif"
                android:textSize="11sp"
                android:layout_margin="5sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:layout_marginStart="15dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="55dp"
            android:id="@+id/lay1"
            android:background="@drawable/curve_shap"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock Category"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#3e403f"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/select_category"
                        android:hint="select stock category"
                        android:padding="10dp"
                        android:background="#f2ebeb"
                        android:textColor="@color/black"
                        android:layout_marginTop="1dp"
                        android:gravity="center_vertical"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock Type"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#3e403f"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/select_type"
                        android:hint="select stock type"
                        android:padding="10dp"
                        android:background="#f2ebeb"
                        android:textColor="@color/black"
                        android:layout_marginTop="1dp"
                        android:gravity="center_vertical"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock Size"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#3e403f"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/select_size"
                        android:hint="select size"
                        android:padding="10dp"
                        android:background="#f2ebeb"
                        android:textColor="@color/black"
                        android:layout_marginTop="1dp"
                        android:gravity="center_vertical"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Batch Number "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#3e403f"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="0dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/stock_batch_name"
                        android:hint="Batch Number"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:background="#f2ebeb"
                        android:textColor="@color/black"
                        android:layout_marginTop="1dp"
                        android:gravity="center_vertical"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invoice Number "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#3e403f"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="0dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/invoice"
                        android:hint="Invoice "
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:background="#f2ebeb"
                        android:textColor="@color/black"
                        android:layout_marginTop="1dp"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distributor Name "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#3e403f"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="0dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/distributor"
                        android:hint="Distributor Name"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:background="#f2ebeb"
                        android:textColor="@color/black"
                        android:layout_marginTop="1dp"
                        android:gravity="center_vertical"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Make"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#3e403f"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/select_make"
                        android:hint="select stock category"
                        android:padding="10dp"
                        android:background="#f2ebeb"
                        android:textColor="@color/black"
                        android:layout_marginTop="1dp"
                        android:gravity="center_vertical"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UOM"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#3e403f"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/select_uom"
                        android:hint="select stock category"
                        android:padding="10dp"
                        android:background="#f2ebeb"
                        android:textColor="@color/black"
                        android:layout_marginTop="1dp"
                        android:gravity="center_vertical"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Safety Stock"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#3e403f"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="0dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/safety"
                        android:hint="safety"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:background="#f2ebeb"
                        android:textColor="@color/black"
                        android:layout_marginTop="1dp"
                        android:gravity="center_vertical"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#3e403f"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="0dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/quantity"
                        android:hint="Quantity"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:background="#f2ebeb"
                        android:textColor="@color/black"
                        android:layout_marginTop="1dp"
                        android:gravity="center_vertical"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maximum Size Allotted "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#3e403f"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="0dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/max_size_alloted"
                        android:hint="Maximum Size Alloted"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:background="#f2ebeb"
                        android:textColor="@color/black"
                        android:layout_marginTop="1dp"
                        android:gravity="center_vertical"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="15sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#3e403f"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="0dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/price"
                        android:hint="Price"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:background="#f2ebeb"
                        android:textColor="@color/black"
                        android:layout_marginTop="1dp"
                        android:gravity="center_vertical"

                        />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/curve_shap">

                    <Button
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:id="@+id/list_insert"
                        android:layout_marginTop="20sp"
                        android:text="Submit"
                        android:backgroundTint="#1ca6eb"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        />
                </LinearLayout>





            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:layout_below="@id/lay1"
            android:layout_marginTop="-30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="2022Â©"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="Sarvi Solution Pvt Ltd."/>
        </LinearLayout>

    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_bar"

        />

</androidx.drawerlayout.widget.DrawerLayout>