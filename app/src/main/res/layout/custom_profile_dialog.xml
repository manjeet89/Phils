<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/shap_curve"
    >
<!--    android:background="@android:color/white"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lay"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="50sp"
                    android:layout_height="50dp"
                    android:src="@drawable/admin"
                    android:background="@drawable/imag_curve"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                >

                <TextView
                    android:id="@+id/nameAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/postAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14dp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:id="@+id/style1"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            style="@style/underlines"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_below="@id/lay"
            android:id="@+id/lay2"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:id="@+id/my_profile"
                android:textColor="#0c0d0c"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textSize="16dp"
                android:layout_margin="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:id="@+id/change_pas"
                android:textStyle="bold"
                android:textColor="#0c0d0c"
                android:fontFamily="serif"
                android:textSize="16dp"
                android:layout_marginStart="20dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            style="@style/underlines"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/curve_shap"
            >
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/logout"
                android:text="Sign Out"
                android:textColor="@color/white"
                android:backgroundTint="#f06154"
                android:gravity="center"
                android:layout_below="@id/test"
                android:layout_marginTop="20sp"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>