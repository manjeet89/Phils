<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    tools:context=".Admin.AssignStockRequisition">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setreq_id"
        android:visibility="invisible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/setreciverid"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checklist"
        android:visibility="invisible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setmaxlot"
        android:visibility="invisible"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5eeed"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/header"
            android:background="@color/white"
            >

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="45sp"
                android:layout_height="wrap_content">
                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topAppbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/white"
                    app:navigationIcon="@drawable/ic_baseline_menu_24"
                    />

            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5sp"
                >
                <ImageView
                    android:layout_width="120sp"
                    android:layout_height="40sp"
                    android:src="@drawable/logo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5sp"
                android:gravity="right"
                >
                <TextView
                    android:id="@+id/locationtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location :"
                    android:textSize="10sp"
                    android:layout_margin="10sp"
                    android:textStyle="bold"
                    android:textColor="#8e84e8"
                    android:fontFamily="serif"/>
                <TextView
                    android:id="@+id/location_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="5sp"
                    android:textStyle="bold"
                    android:textColor="#8e84e8"
                    />


                <ImageView
                    android:id="@+id/img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="7sp"
                    android:src="@drawable/ic_baseline_message_24"
                    />
                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_margin="7sp"
                    android:src="@drawable/admin"
                    android:background="@drawable/shap_curve"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:orientation="horizontal"
        android:layout_margin="5sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requisition Assign Stock"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:layout_marginStart="15sp"
            android:layout_marginTop="5dp"

            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  | Home - Requisition Assign Stock"
            android:textColor="@color/lightgray"
            android:fontFamily="sans-serif"
            android:textSize="11sp"
            android:layout_margin="5sp"
            android:textStyle="bold"/>

    </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:layout_marginStart="15dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="55dp"
            android:id="@+id/lay1"
            android:background="@drawable/curve_shap"

            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/curve_shap"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="serif"
                android:text="Requisition Assign Details"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay1"
                android:layout_margin="15sp"
                android:background="@color/white"
                android:backgroundTint="@color/white">


                <LinearLayout
                    android:id="@+id/table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:hint=""
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:hint=""
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:hint=""
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:hint=""
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Require Quantity"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/reqQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:hint=""
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>


            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15sp"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Stock"
                android:layout_marginStart="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12dp"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#db0711"
                    />
            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay1"
                android:layout_margin="15sp"
                android:background="@color/white"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TableLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="MissingConstraints">

                        <TableRow android:id="@+id/line1">

                            <TextView
                                android:layout_width="100sp"
                                android:layout_height="wrap_content"
                                android:layout_margin="7sp"
                                android:text=""
                                android:textColor="@color/lightgray"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/assignbatch"
                                android:layout_width="100sp"
                                android:layout_height="wrap_content"
                                android:layout_margin="7sp"
                                android:text="BATCH"
                                android:textColor="@color/lightgray"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/assigncategory"
                                android:layout_width="120sp"
                                android:layout_height="wrap_content"
                                android:layout_margin="7sp"
                                android:text="CATEGORY"
                                android:textColor="@color/lightgray"
                                android:textSize="12dp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/assigntype"
                                android:layout_width="120sp"
                                android:layout_height="wrap_content"
                                android:layout_margin="7sp"
                                android:text="TYPE"
                                android:textColor="@color/lightgray"
                                android:textSize="12dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/assignsize"
                                android:layout_width="100sp"
                                android:layout_height="wrap_content"
                                android:layout_margin="7sp"
                                android:text="SIZE"
                                android:textColor="@color/lightgray"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/assignmaxalot"
                                android:layout_width="100sp"
                                android:layout_height="wrap_content"
                                android:layout_margin="7sp"
                                android:text="MAX ALOT"
                                android:textColor="@color/lightgray"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/assignavailable"
                                android:layout_width="100sp"
                                android:layout_height="wrap_content"
                                android:layout_margin="7sp"
                                android:text="AVAILABLE"
                                android:textColor="@color/lightgray"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/assignstock"
                                android:layout_width="100sp"
                                android:layout_height="wrap_content"
                                android:layout_margin="7sp"
                                android:text="STOCK"
                                android:textColor="@color/lightgray"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/assignmake"
                                android:layout_width="100sp"
                                android:layout_height="wrap_content"
                                android:layout_margin="7sp"
                                android:text="MAKE"
                                android:textColor="@color/lightgray"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/assignuom"
                                android:layout_width="100sp"
                                android:layout_height="wrap_content"
                                android:layout_margin="7sp"
                                android:text="UOM"
                                android:textColor="@color/lightgray"
                                android:textSize="12dp"
                                android:textStyle="bold" />


                        </TableRow>

                        <View
                            style="@style/underlines"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/line1"
                            tools:ignore="MissingConstraints" />
                    </TableLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
<!--                        tools:listitem="@layout/custom_assign_stock_requisition"-->

                </LinearLayout>


            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15sp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" *"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#db0711"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        />
                </LinearLayout>
                <EditText
                    android:id="@+id/assignquantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="#f2ebeb"
                    android:gravity="center_vertical"
                    android:hint="Enter Quantity"
                    android:padding="10dp"
                    android:textColor="@color/black" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15sp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employee Received By"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" *"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#db0711"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/assignrecivedby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="#f2ebeb"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:gravity="center_vertical"
                    android:hint="Employee Received By"
                    android:padding="10dp"
                    android:textColor="@color/black" />


            </LinearLayout>

            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="#1ca6eb"
                android:text="Submit"
                />

        </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:layout_below="@id/lay1"
            android:layout_marginTop="-30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="2022Â©"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="Sarvi Solution Pvt Ltd."/>
        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_bar"

        />

</androidx.drawerlayout.widget.DrawerLayout>